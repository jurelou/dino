<form theme="dark">
  <label>windows event logs</label>
  <description></description>
  <init>
    <unset token="help"></unset>
  </init>
  <fieldset submitButton="true" autoRun="false">
    <input type="time" token="timerange" searchWhenChanged="false">
      <label>FenÃªtre de temps</label>
      <default>
        <earliest>0</earliest>
        <latest></latest>
      </default>
    </input>
    <input type="multiselect" token="agent_id" searchWhenChanged="true">
      <label>Agents</label>
      <choice value="*">Tous</choice>
      <valuePrefix>agent.agentid="</valuePrefix>
      <delimiter> OR </delimiter>
      <valueSuffix>"</valueSuffix>
      <fieldForLabel>agent.hostname</fieldForLabel>
      <fieldForValue>agent.agentid</fieldForValue>
      <search>
        <query>`hurukai` log_type=eventlog | stats count by agent.agentid, agent.hostname</query>
        <earliest>$timerange.earliest$</earliest>
        <latest>$timerange.latest$</latest>
      </search>
      <default>*</default>
    </input>
    <input type="text" token="search">
      <label>Recherche</label>
    </input>
  </fieldset>
  <row>
    <panel>
      <title>Channels disponibles</title>
      <table>
        <search>
          <query>`hurukai` $agent_id$  log_type=eventlog | stats count by source_name</query>
          <earliest>$timerange.earliest$</earliest>
          <latest>$timerange.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <title>Historique des logs</title>
      <chart>
        <search>
          <query>`hurukai` log_type=eventlog | timechart span=5m count by agent.agentid</query>
          <earliest>$timerange.earliest$</earliest>
          <latest>$timerange.latest$</latest>
        </search>
        <option name="charting.axisY.scale">log</option>
        <option name="charting.chart">line</option>
        <option name="charting.drilldown">none</option>
      </chart>
    </panel>
  </row>
</form>