<form theme="dark">
  <label>Réseau</label>
  <description></description>
  <init>
    <unset token="help"></unset>
  </init>
  <fieldset submitButton="true" autoRun="false">
    <input type="time" token="timerange" searchWhenChanged="false">
      <label>Fenêtre de temps</label>
      <default>
        <earliest>0</earliest>
        <latest></latest>
      </default>
    </input>
    <input type="multiselect" token="agent_id" searchWhenChanged="true">
      <label>Agents</label>
      <choice value="*">Tous</choice>
      <valuePrefix>agent.agentid="</valuePrefix>
      <delimiter> OR </delimiter>
      <valueSuffix>"</valueSuffix>
      <fieldForLabel>agent.hostname</fieldForLabel>
      <fieldForValue>agent.agentid</fieldForValue>
      <search>
        <query>`hurukai` log_type=network | stats count by agent.agentid, agent.hostname</query>
        <earliest>$timerange.earliest$</earliest>
        <latest>$timerange.latest$</latest>
      </search>
      <default>*</default>
    </input>
  </fieldset>
  <row>
    <panel>
      <title>INCOMMING connections</title>
      <table>
        <search>
          <query>`hurukai` $agent_id$ log_type=network direction=in image_name!="C:\\Program Files\\HarfangLab\\hurukai.exe" | table @event_create_date, initiated, event_id, username, image_name, saddr, sport, daddr</query>
          <earliest>$timerange.earliest$</earliest>
          <latest>$timerange.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <title>OUTGOING connections</title>
      <table>
        <search>
          <query>`hurukai` $agent_id$ log_type=network direction=out | table @event_create_date, initiated, event_id, username, image_name, saddr, sport, daddr</query>
          <earliest>$timerange.earliest$</earliest>
          <latest>$timerange.latest$</latest>
        </search>
        <option name="drilldown">none</option>
      </table>
    </panel>
  </row>
</form>