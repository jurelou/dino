<form theme="dark">
  <label>Alertes</label>
  <description></description>
  <init>
    <unset token="help"></unset>
  </init>
  <fieldset submitButton="true" autoRun="false">
    <input type="time" token="timerange" searchWhenChanged="false">
      <label>Fenêtre de temps</label>
      <default>
        <earliest>0</earliest>
        <latest></latest>
      </default>
    </input>
    <input type="multiselect" token="agent_id" searchWhenChanged="true">
      <label>Agents</label>
      <choice value="*">Tous</choice>
      <valuePrefix>agent.agentid="</valuePrefix>
      <delimiter> OR </delimiter>
      <valueSuffix>"</valueSuffix>
      <fieldForLabel>agent.hostname</fieldForLabel>
      <fieldForValue>agent.agentid</fieldForValue>
      <search>
        <query>`hurukai` log_type=alert | stats count by agent.agentid, agent.hostname</query>
        <earliest>$timerange.earliest$</earliest>
        <latest>$timerange.latest$</latest>
      </search>
      <default>*</default>
    </input>
    <input type="multiselect" token="alert_level" searchWhenChanged="true">
      <label>Niveau d'alerte</label>
      <choice value="*">Tous</choice>
      <valuePrefix>level="</valuePrefix>
      <delimiter> OR </delimiter>
      <valueSuffix>"</valueSuffix>
      <fieldForLabel>level</fieldForLabel>
      <fieldForValue>level</fieldForValue>
      <search>
        <query>`hurukai` log_type=alert | stats count by level</query>
        <earliest>$timerange.earliest$</earliest>
        <latest>$timerange.latest$</latest>
      </search>
      <default>*</default>
    </input>
    <input type="multiselect" token="alert_type" searchWhenChanged="true">
      <label>Type d'alerte</label>
      <choice value="*">Tous</choice>
      <valuePrefix>alert_type="</valuePrefix>
      <delimiter> OR </delimiter>
      <valueSuffix>"</valueSuffix>
      <fieldForLabel>alert_type</fieldForLabel>
      <fieldForValue>alert_type</fieldForValue>
      <search>
        <query>`hurukai` log_type=alert | stats count by alert_type</query>
        <earliest>$timerange.earliest$</earliest>
        <latest>$timerange.latest$</latest>
      </search>
      <default>*</default>
    </input>
  </fieldset>
  <row>
    <panel>
      <title>Alertes critiques</title>
      <single>
        <search>
          <query>`hurukai` $agent_id$ $alert_type$ log_type=alert level=critical | timechart span=24h count | appendpipe [stats count | where count=0]</query>
          <earliest>$timerange.earliest$</earliest>
          <latest>$timerange.latest$</latest>
        </search>
        <option name="colorBy">value</option>
        <option name="colorMode">block</option>
        <option name="drilldown">all</option>
        <option name="numberPrecision">0</option>
        <option name="rangeColors">["0x555","0x6a040f"]</option>
        <option name="rangeValues">[0]</option>
        <option name="refresh.display">progressbar</option>
        <option name="showSparkline">1</option>
        <option name="showTrendIndicator">1</option>
        <option name="trellis.enabled">0</option>
        <option name="trellis.scales.shared">1</option>
        <option name="trellis.size">medium</option>
        <option name="trendColorInterpretation">inverse</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="unitPosition">after</option>
        <option name="useColors">1</option>
        <option name="useThousandSeparators">1</option>
        <drilldown>
          <link target="_blank">search?q=`hurukai` $agent_id$ log_type=alert level=critical</link>
        </drilldown>
      </single>
    </panel>
    <panel>
      <title>Alertes hautes</title>
      <single>
        <search>
          <query>`hurukai` $agent_id$ $alert_type$ log_type=alert level=high | timechart span=24h count | appendpipe [stats count | where count=0]</query>
          <earliest>$timerange.earliest$</earliest>
          <latest>$timerange.latest$</latest>
        </search>
        <option name="colorBy">value</option>
        <option name="colorMode">block</option>
        <option name="drilldown">all</option>
        <option name="numberPrecision">0</option>
        <option name="rangeColors">["0x555","0xd00000"]</option>
        <option name="rangeValues">[0]</option>
        <option name="refresh.display">progressbar</option>
        <option name="showSparkline">1</option>
        <option name="showTrendIndicator">1</option>
        <option name="trellis.enabled">0</option>
        <option name="trellis.scales.shared">1</option>
        <option name="trellis.size">medium</option>
        <option name="trendColorInterpretation">inverse</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="unitPosition">after</option>
        <option name="useColors">1</option>
        <option name="useThousandSeparators">1</option>
        <drilldown>
          <link target="_blank">search?q=`hurukai` $agent_id$ log_type=alert level=high</link>
        </drilldown>
      </single>
    </panel>
    <panel>
      <title>Alertes moyennes</title>
      <single>
        <search>
          <query>`hurukai` $agent_id$ $alert_type$ log_type=alert level=medium | timechart span=24h count | appendpipe [stats count | where count=0]</query>
          <earliest>$timerange.earliest$</earliest>
          <latest>$timerange.latest$</latest>
        </search>
        <option name="colorBy">value</option>
        <option name="colorMode">block</option>
        <option name="drilldown">all</option>
        <option name="numberPrecision">0</option>
        <option name="rangeColors">["0x555","0xe85d04"]</option>
        <option name="rangeValues">[0]</option>
        <option name="refresh.display">progressbar</option>
        <option name="showSparkline">1</option>
        <option name="showTrendIndicator">1</option>
        <option name="trellis.enabled">0</option>
        <option name="trellis.scales.shared">1</option>
        <option name="trellis.size">medium</option>
        <option name="trendColorInterpretation">inverse</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="unitPosition">after</option>
        <option name="useColors">1</option>
        <option name="useThousandSeparators">1</option>
        <drilldown>
          <link target="_blank">search?q=`hurukai` $agent_id$ log_type=alert level=medium</link>
        </drilldown>
      </single>
    </panel>
    <panel>
      <title>Alertes faibles</title>
      <single>
        <search>
          <query>`hurukai` $agent_id$ $alert_type$ log_type=alert level=low | timechart span=24h count | appendpipe [stats count | where count=0]</query>
          <earliest>$timerange.earliest$</earliest>
          <latest>$timerange.latest$</latest>
        </search>
        <option name="colorBy">value</option>
        <option name="colorMode">block</option>
        <option name="drilldown">all</option>
        <option name="numberPrecision">0</option>
        <option name="rangeColors">["0x555","0xfbb539"]</option>
        <option name="rangeValues">[0]</option>
        <option name="refresh.display">progressbar</option>
        <option name="showSparkline">1</option>
        <option name="showTrendIndicator">1</option>
        <option name="trellis.enabled">0</option>
        <option name="trellis.scales.shared">1</option>
        <option name="trellis.size">medium</option>
        <option name="trendColorInterpretation">inverse</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="unitPosition">after</option>
        <option name="useColors">1</option>
        <option name="useThousandSeparators">1</option>
        <drilldown>
          <link target="_blank">search?q=`hurukai` $agent_id$ log_type=alert level=low</link>
        </drilldown>
      </single>
    </panel>
  </row>
  <row>
    <panel>
      <title>Nombre d'alertes</title>
      <chart>
        <search>
          <query>`hurukai` log_type=alert $alert_type$ $alert_level$ $agent_id$ | stats count by msg</query>
          <earliest>$timerange.earliest$</earliest>
          <latest>$timerange.latest$</latest>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </chart>
    </panel>
    <panel>
      <title>Répartition des alertes par agents</title>
      <chart>
        <search>
          <query>`hurukai` log_type=alert $alert_type$ $alert_level$ $agent_id$ | stats count by agent.hostname</query>
          <earliest>$timerange.earliest$</earliest>
          <latest>$timerange.latest$</latest>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <title>Alertes</title>
      <table>
        <search>
          <query>`hurukai` log_type=alert $alert_type$ $alert_level$ $agent_id$ | table @event_create_date, level, alert_type, rule_name, msg</query>
          <earliest>$timerange.earliest$</earliest>
          <latest>$timerange.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </table>
    </panel>
  </row>
</form>