<form theme="dark">
  <label>Agents</label>
  <description></description>
  <init>
    <unset token="help"></unset>
  </init>
  <fieldset submitButton="true" autoRun="false">
    <input type="time" token="timerange" searchWhenChanged="false">
      <label>Fenêtre de temps</label>
      <default>
        <earliest>0</earliest>
        <latest></latest>
      </default>
    </input>
  </fieldset>
  <row>
    <panel>
      <title>Agents</title>
      <table>
        <search>
          <query>`hurukai` | table agent.agentid, agent.hostname, agent.domainname, agent.ostype, agent.osversion, agent.osproducttype  | dedup agent.agentid</query>
          <earliest>$timerange.earliest$</earliest>
          <latest>$timerange.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <chart>
        <search>
          <query>`hurukai` | dedup agent.agentid | stats count by agent.ostype</query>
          <earliest>$timerange.earliest$</earliest>
          <latest>$timerange.latest$</latest>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </chart>
    </panel>
    <panel>
      <title>Répartition des logs par niveau de criticité</title>
      <chart>
        <search>
          <query>`hurukai` log_type=agentlog | stats count by level</query>
          <earliest>$timerange.earliest$</earliest>
          <latest>$timerange.latest$</latest>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <title>Erreurs</title>
      <table>
        <search>
          <query>`hurukai` log_type=agentlog level=ERROR OR level=CRITICAL | where action!="" | table @timestamp, hostname, action, message</query>
          <earliest>$timerange.earliest$</earliest>
          <latest>$timerange.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </table>
    </panel>
  </row>
</form>